# Auto detect text files and perform LF normalization
* text=auto

# CSS files
*.css text eol=lf

# JavaScript files
*.js text eol=lf

# Python files
*.py text eol=lf

# HTML files
*.html text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
